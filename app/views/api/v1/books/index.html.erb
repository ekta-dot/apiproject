<style>
  .link-spacing {
    margin-right: 30px; 
  }
</style>

<table border="1" style="width:100%">
  <thead>
  
    <tr>
      <th>Book Name</th>
      <th>Author ID</th>
      <th>Actions</th>
    </tr>
  
  </thead>
  <tbody>

<% @books.each do |book| %>

    <tr style="text-align: center;">
      <td><%= book.book_name %></td> 
      <td><%= book.book_id %></td> 
      <td style="text-align: center;" >
        <%= link_to "Show" , book_path(book) , class: "link-spacing"%>
        <%= link_to "Edit" , edit_book_path(book) , class: "link-spacing" %>
        <%= link_to "Delete" , book_path(book), method: :delete , data: { confirm: "Are you sure?"} , class: "link-spacing" %>
      </td>    

    </tr>

    <% end %>
  </tbody>
</table>
